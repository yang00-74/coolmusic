<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/concat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="19dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/song_name"
        android:layout_alignStart="@+id/song_name"
        android:layout_below="@+id/song_name"
        android:layout_marginTop="28dp"

        android:textColor="@color/color_artist" />

    <TextView
        android:id="@+id/concat0"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/song_artist"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/song_artist"
        android:layout_toRightOf="@+id/song_artist"
        android:text="-" />

    <TextView
        android:id="@+id/song_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/concat0"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/concat0"
        android:layout_toRightOf="@+id/concat0" />

</RelativeLayout>